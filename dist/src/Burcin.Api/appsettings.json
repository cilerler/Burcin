{
	"ConnectionStrings": {
		//#if (EntityFramework)
		"MigrationConnection": "data source=localhost;initial catalog=(databaseName);Trusted_Connection=True;MultipleActiveResultSets=True;App=Burcin.Console",
		//#endif
		//#if (CacheSqlServer)
		"SqlServerCacheConnection": "data source=localhost;initial catalog=DistributedCache;Trusted_Connection=True;MultipleActiveResultSets=true;App=Burcin.Console",
		//#endif
		//#if (CacheRedis)
		"RedisCacheConnection": "localhost"
		//#endif
	},
	"Logging": {
		"IncludeScopes": true,
		"LogLevel": {
			"Default": "Information",
			"System": "Information",
			"Microsoft": "Information"
		}
	},
	"Serilog": {
		"MinimumLevel": {
			"Default": "Information"
		},
		"Using": [
			"Serilog.Exceptions",
			"Serilog.Sinks.Literate"
		],
		"WriteTo": [
			{
				"Name": "LiterateConsole"
			}
		],
		"Enrich": [
			"FromLogContext",
			"WithExceptionDetails",
			"WithMachineName",
			"WithThreadId",
			"WithProcessId"
		],
		"Properties": {
			"Configuration": "DEFAULT",
			"ApplicationName": "BurcinApi"
		}
	},
	//#if (EntityFramework)
	"Migration": {
		"AssemblyName": "Burcin.Migrations"
	},
	//#endif
	//#if (CacheSqlServer || CacheRedis)
	"Cache": {
		//#if (CacheSqlServer)
		"SqlServer": {
			"ConnectionStringKey": "SqlServerCacheConnection",
			"SchemaName": "cache",
			"TableName": "BurcinApi"
		},
		//#endif
		//#if (CacheRedis)
		"Redis": {
			"ConnectionStringKey": "RedisCacheConnection",
			"InstanceName": "BurcinApi:"
		}
		//#endif
	},
	//#endif
	//#if (BackgroundService)
	"GracePeriodManagerService": {
		"DelayTime": "0 21 * * 1-5"
	},
	//#endif
	"Helper": {
		"Prefix": "Burcin_Prefix"
	}
}
