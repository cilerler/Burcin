{
	"ConnectionStrings": {
		//#if (HealthChecks || EntityFramework)
		"DefaultConnection": "data source=localhost;initial catalog=BurcinDatabase;Trusted_Connection=True;MultipleActiveResultSets=True;App=Burcin.Api",
		"MigrationConnection": "data source=localhost;initial catalog=BurcinDatabase;Trusted_Connection=True;MultipleActiveResultSets=True;App=Burcin.Api",
		//#endif
		//#if (HealthChecks || CacheSqlServer)
		"SqlServerCacheConnection": "data source=localhost;initial catalog=DistributedCache;Trusted_Connection=True;MultipleActiveResultSets=true;App=Burcin.Api",
		//#endif
		//#if (HealthChecks || CacheRedis)
		"RedisCacheConnection": "localhost:6379",
		//#endif
		//#if (HealthChecks)
		"RabbitMqConnection": "amqp://test:test@localhost:5672/",
		"ElasticSearchConnection": "http://localhost:9200",
		"SeqConnection": "http://localhost:5341"
		//#endif
	},
	"Logging": {
		"IncludeScopes": true,
		"LogLevel": {
			"Default": "Information",
			"System": "Information",
			"Microsoft": "Information"
		}
	},
	"AllowedHosts": "*",
	"Serilog": {
		"MinimumLevel": {
			"Default": "Information"
		},
		"Using": [
			"Serilog.Exceptions",
			"Serilog.Sinks.Console"
		],
		"WriteTo": [
			{
				"Name": "Console"
			}
		],
		"Enrich": [
			"FromLogContext",
			"WithExceptionDetails",
			"WithMachineName",
			"WithThreadId",
			"WithProcessId"
		],
		"Properties": {
			"Configuration": "DEFAULT",
			"ApplicationName": "BurcinApi"
		}
	},
	//#if (EntityFramework)
	"Migration": {
		"AssemblyName": "Burcin.Migrations"
	},
	//#endif
	//#if (CacheSqlServer || CacheRedis)
	"Cache": {
		//#if (CacheSqlServer)
		"SqlServer": {
			"ConnectionStringKey": "SqlServerCacheConnection",
			"SchemaName": "cache",
			"TableName": "BurcinApi"
		},
		//#endif
		//#if (CacheRedis)
		"Redis": {
			"ConnectionStringKey": "RedisCacheConnection",
			"InstanceName": "BurcinApi:"
		}
		//#endif
	},
	//#endif
	//#if (BackgroundService)
	"GracePeriodManagerService": {
		"DelayTime": "0 * * * 0-6"
	},
	//#endif
	"Helper": {
		"Prefix": "Burcin_Prefix"
	},
	//#if (HealthChecks)
	"HealthChecks-UI": {
		"EvaluationTimeOnSeconds": 10,
		"MinimumSecondsBetweenFailureNotifications": 60,
		"HealthCheckDatabaseConnectionString": "Data Source=beatpulsedb",
		"Webhooks": [
			{
				"Name": "Slack",
				"Uri": "https://hooks.slack.local/services/...",
				"Payload": "{\"text\":\"The HealthCheck [[LIVENESS]] is failing with the error message: [[FAILURE]]. <http://localhost:47922/healthchecks-ui|Click here> to get more details.\",\"channel\":\"#general\",\"link_names\": 1,\"username\":\"Burcin-health-service-bot\",\"icon_emoji\":\":rotating_light:\"}",
				"RestoredPayload": "{\"text\":\"The HealthCheck [[LIVENESS]] is recovered. All is up and running\",\"channel\":\"#general\",\"link_names\": 1,\"username\":\"Burcin-health-service-bot\",\"icon_emoji\":\":information_source:\"}"
			}
		],
		"HealthChecks": [
			{
				"Name": "Self (Direct)",
				"Uri": "http://localhost:47922/health/beatpulse"
			},
			{
				"Name": "Self (IIS Express)",
				"Uri": "http://localhost:47920/health/beatpulse"
			}
		]
	}
	//#endif
}
