{
  "$schema": "http://json.schemastore.org/template",
  "author": "Cengiz Ilerler",
  "classifications": [ "Common", "Console" ],
  "identity": "Burcin.ConsoleApplicationTemplate.CSharp",
  "name": "Burcin Console Application",
  "shortName": "burcinconsole",
  "tags": {
    "language": "C#",
    "type":"project"
  },
  "groupIdentity":"Burcin.ConsoleApplicationTemplate",
	"sourceName": "Burcin",
  "preferNameDirectory": true,
  "guids": [
    "412f3e04-fa62-4566-8e71-3fe15dc33c1c"
  ],
  "symbols":{
    "authors": {
      "type": "parameter",
      "defaultValue": "anonymous",
      "replaces":"(authors)"
    },
    "repositoryUrl": {
      "type": "parameter",
      "defaultValue": "https://github.com/cilerler/burcin",
      "replaces":"(repositoryUrl)"
    },
    "databaseName": {
      "type": "parameter",
      "defaultValue": "burcindb",
      "replaces":"(databaseName)"
    },
    "entityFramework":{
      "type": "parameter",
      "dataType":"bool",
      "defaultValue": "false"
    },
    "testFramework":{
      "type": "parameter",
      "dataType":"bool",
      "defaultValue": "false"
    },
    "dockerSupport":{
      "type": "parameter",
      "dataType":"bool",
      "defaultValue": "false"
    },
    "vsCodeDirectory":{
      "type": "parameter",
      "dataType":"bool",
      "defaultValue": "false"
    },
    "githubTemplates":{
      "type": "parameter",
      "dataType":"bool",
      "defaultValue": "false"
    },
    "dockerId":{
      "type": "generated",
      "generator": "guid",
      "replaces": "412f3e04-fa62-4566-8e71-3fe15dc33c1c",
      "parameters": {
        "format":"D"
      }
    },
    "myconstant": {
      "type": "generated",
      "generator": "constant",
      "parameters": {
        "value":"5001"
      },
      "replaces":"1234"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!entityFramework)",
          "exclude": [
            "tools/EntityFramework/**/*",
            "src/Burcin.Console/DbContextFactory.cs",
            "src/Burcin.Console/EntityFramework.targets",
            "src/Burcin.Domain/EntityFramework.targets",
            "src/Burcin.Models/**/*",
            "src/Burcin.Data/**/*",
            "src/Burcin.Migrations/**/*"
          ]
        },
        {
          "condition": "(!testFramework)",
          "exclude": [
            "test/**/*"
          ]
        },
        {
          "condition": "{!dockerSupport}",
          "exclude": [
            "src/Burcin.Console/Dockerfile",
            "src/.dockerignore",
            "src/docker-compose.dcproj",
            "src/docker-compose.yml",
            "src/docker-compose.override.yml"
          ]
        },
        {
          "condition": "(!vsCodeDirectory)",
          "exclude": [
            ".vscode/**/*"
          ]
        },
        {
          "condition": "(!gitHubTemplates)",
          "exclude": [
            ".github/**/*"
          ]
        }
      ]
    }
  ]
}